<%= simple_nested_form_for [parent, resource] do |f| %>
  <%= f.input :title %>
  <%= f.fields_for :fields do |ff| %>
    <%= ff.input :title, :collection => parent.items_options.keys %>
    <%= ff.input :kind %>
    <%= ff.input :weight %>
    <%= ff.link_to_remove 'remove' %>
  <% end %>
  <%= f.link_to_add 'add', :fields %>
  <%= f.submit %>
<% end %>
